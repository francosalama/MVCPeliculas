@model MVCPeliculas.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_RegistroLogInLayout.cshtml";
}

<h2>Iniciar sesión</h2>

<div class="col-md-4">
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Mail" class="control-label"></label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Contrasenia" class="control-label"></label>
            <input asp-for="Contrasenia" class="form-control" type="password"/>
            <span asp-validation-for="Contrasenia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Iniciar sesión" class="btn btn-primary" />
        </div>
    </form>
</div>